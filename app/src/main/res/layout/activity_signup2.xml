<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/wall"
    tools:context="com.example.iyashwant.spiderprojectprototype.signup2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:background="#dddddd"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:background="#dddddd"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:text="Welcome"
                android:textSize="25dp"
                android:paddingLeft="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/welcome"/>


            <Spinner
                android:id="@+id/body_type"
                android:layout_marginTop="20dp"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:popupBackground="@drawable/box_spin"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp" />

            <EditText
                android:id="@+id/other_bodytype"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:ems="10"
                android:hint="If Other, type here"
                android:textColorHint="#ffffff"
                android:background="@drawable/box2"
                android:inputType="textMultiLine"
                />

            <Spinner
                android:id="@+id/hair_color"
                android:layout_marginTop="20dp"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:popupBackground="@drawable/box_spin"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp" />

            <EditText
                android:id="@+id/other_haircolor"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="If Other, type here"
                android:textColorHint="#ffffff"
                android:background="@drawable/box2"
                android:inputType="textMultiLine"
                />


            <Spinner
                android:id="@+id/hair_length"
                android:layout_marginTop="20dp"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:popupBackground="@drawable/box_spin"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp" />

            <EditText
                android:id="@+id/other_hairlength"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="If Other, type here"
                android:textColorHint="#ffffff"
                android:background="@drawable/box2"
                android:inputType="textMultiLine"
                />


            <Spinner
                android:id="@+id/eye_color"
                android:layout_marginTop="20dp"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:popupBackground="@drawable/box_spin"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp" />

            <EditText
                android:id="@+id/other_eyecolor"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="If Other, type here"
                android:textColorHint="#ffffff"
                android:background="@drawable/box2"
                android:inputType="textMultiLine"
                />


            <Spinner
                android:id="@+id/skin_tone"
                android:layout_marginTop="20dp"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:popupBackground="@drawable/box_spin"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp" />

            <EditText
                android:id="@+id/other_skintone"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="If Other, type here"
                android:textColorHint="#ffffff"
                android:background="@drawable/box2"
                android:inputType="textMultiLine"
                />

            <Spinner
                android:id="@+id/facial_hair"
                android:layout_marginTop="20dp"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:popupBackground="@drawable/box_spin"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp" />

            <EditText
                android:id="@+id/other_facialhair"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="If Other, type here"
                android:textColorHint="#ffffff"
                android:background="@drawable/box2"
                android:inputType="textMultiLine"
                />

            <EditText
                android:id="@+id/height"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="Height"
                android:textColorHint="#ffffff"
                android:background="@drawable/box"
                android:inputType="textMultiLine"
                />



            <EditText
                android:id="@+id/weight"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="Weight"
                android:textColorHint="#ffffff"
                android:background="@drawable/box"
                android:inputType="text" />


            <EditText
                android:id="@+id/hip_size"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="Hip Size"
                android:textColorHint="#ffffff"
                android:background="@drawable/box"
                android:inputType="text" />

            <EditText
                android:id="@+id/chest_size"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="Chest Size"
                android:textColorHint="#ffffff"
                android:background="@drawable/box"
                android:inputType="text" />

            <EditText
                android:id="@+id/waist_size"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="60dp"
                android:ems="10"
                android:hint="Waist Size"
                android:textColorHint="#ffffff"
                android:background="@drawable/box"
                android:inputType="text" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:background="@drawable/button_round"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:text="Next"
        android:textColor="#ffffff" />

</RelativeLayout>
