<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wall"
    tools:context="com.example.iyashwant.spiderprojectprototype.signup"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:background="#dddddd"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


    <EditText
        android:id="@+id/first_name"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="First Name"
        android:textColorHint="#ffffff"
        android:textSize="16dp"
        android:background="@drawable/box"
        android:inputType="textPersonName"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"/>

    <EditText
        android:id="@+id/last_name"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Last Name"
        android:textColorHint="#ffffff"
        android:textSize="16dp"
        android:background="@drawable/box"
        android:inputType="textPersonName"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"/>

    <EditText
        android:id="@+id/email"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textSize="16dp"
        android:hint="Email"
        android:textColorHint="#ffffff"
        android:background="@drawable/box"
        android:inputType="textPersonName"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"/>

    <EditText
        android:id="@+id/password"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:background="@drawable/box"
        android:inputType="textPassword"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"/>

    <EditText
        android:id="@+id/confirm_password"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:textColorHint="#ffffff"
        android:background="@drawable/box"
        android:inputType="textPassword"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:weightSum="10">

            <Spinner
                android:id="@+id/gender"
                android:background="@drawable/box"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="16dp"
                android:popupBackground="@drawable/box_spin"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/box"
                android:text="@string/date_selected"
                android:textColorHint="#ffffff"
                android:hint="Click to set DOB"
                android:textSize="16dp"
                android:onClick="setDate"
                android:gravity="center"/>

        </LinearLayout>

    <EditText
        android:id="@+id/mobile"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:textColorHint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:background="@drawable/box"
        android:inputType="number"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"/>

        <EditText
            android:id="@+id/residing"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Residing In"
            android:textColorHint="#ffffff"
            android:background="@drawable/box"
            android:inputType="textMultiLine"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"/>

        <EditText
            android:id="@+id/hometown"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Native (Hometown)"
            android:textColorHint="#ffffff"
            android:background="@drawable/box"
            android:inputType="textMultiLine" />


        <io.apptik.widget.multiselectspinner.MultiSelectSpinner
            android:id="@+id/languages"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:hint="Languages Known"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/box"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="20dp"
        android:background="@drawable/box"
        android:layout_width="match_parent"
        android:textSize="16dp"

        android:layout_marginBottom="50dp"
        android:popupBackground="@drawable/box_spin"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp" />

    </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_round"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Next"
        android:textColor="#ffffff"
        android:layout_weight="0.25"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
